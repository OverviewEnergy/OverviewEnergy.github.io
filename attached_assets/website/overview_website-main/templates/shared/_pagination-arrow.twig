{% set disabled = disabled|default(false) %}
{% set classes = 'PaginationArrow ' ~ class|default('') %}

{% set icon = 'pagination-arrow-left' %}
{% set label = 'Previous' %}
{% if direction == 'right' %}
  {% set label = 'Next' %}
  {% set icon = 'pagination-arrow-right' %}
{% endif %}

{% set element = element|default('button') %}

<{{element}}
  {% if disabled %}disabled{% endif %}
  class="{{classes}}"
  data-pagination-arrow
  aria-label="{{label}}"
>
  {% include 'svg/' ~ icon ~ '.svg.twig' %}
</{{element}}>