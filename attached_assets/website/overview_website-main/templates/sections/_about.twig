<section
  class="{{classes}}"
  {% if section.theSectionId is not empty %}
    id="{{section.theSectionId}}"
  {% endif %}
  data-init-section="Reveal"
>
  <div class="PageSection-container">
    <div
      class="flex flex-col gap-[30px] mb-[30px]
             md:gap-[80px] md:mb-[80px]
             lg:flex lg:flex-row lg:gap-[60px] lg:mb-[120px]"
  >
      <h2
        class="h1 text-center lg:text-left"
        data-reveal-item
      >
        {{section.title|raw}}
      </h2>
    </div>

    <div class="lg:hidden md:text-tablet-h3 md:font-display mb-[40px] md:mb-[80px] text-center">
      {{section.primaryBody|raw}}
    </div>

    {% if section.mediaItem|length > 0 %}
      <div
        class="w-full mb-[30px] md:mb-[50px] lg:mb-[100px]"
        data-reveal-item
      >
        {% include "shared/_mediaItem.twig" with {
          mediaItem: section.mediaItem.one,
          itemClasses: 'w-full',
          imageClasses: 'w-full rounded aspect-video object-cover object-center'
        } only %}
      </div>
    {% endif %}

    <div
      class="lg:hidden mb-[40px] text-center"
      data-reveal-item
    >
      {{section.secondaryBody|raw}}
    </div>

    <div
      class="lg:hidden flex justify-center"
      data-reveal-item
    >
      {% include "shared/_links.twig" with {
        links: section.links,
        wrapperClasses: '',
        linkClasses: 'Button Button--tan'
      } only %}
    </div>

    <div class="hidden lg:flex lg:flex-row justify-between lg:gap-[60px]">
      <div
        class="flex flex-col gap-[20px] max-w-[800px]"
        data-reveal-item
      >
        <div class="h5 text-gray-300">
          {{section.primaryBodyHeadline|raw}}
        </div>
        <div class="font-display text-h3">
          {{section.primaryBody|raw}}
        </div>
      </div>

      <div
        class="flex flex-col gap-[20px] max-w-[260px]"
        data-reveal-item
      >
        <div class="h5 text-gray-300">
          {{section.secondaryBodyHeadline|raw}}
        </div>
        <div class="mb-[40px]">
          {{section.secondaryBody|raw}}
        </div>
        {% include "shared/_links.twig" with {
          links: section.links,
          linkClasses: 'Button Button--tan'
        } only %}
      </div>
    </div>
  </div>
</section>